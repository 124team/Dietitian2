<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Spinner
            android:id="@+id/hSpinnerSelect1"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            />

        <Spinner
            android:id="@+id/hSpinnerSelect2"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            />

        <Spinner
            android:id="@+id/hSpinnerSelect3"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            />
        <ImageButton
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginLeft="25dp"
            android:background="#ffffff"
            android:id="@+id/imageSearch"
            android:src="@drawable/y_img_search_bar_magnifier"/>

    </LinearLayout>

    <ImageView
        android:id="@+id/hImageViewOnclick1"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:src="@drawable/himageviewtitle1"/>

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:columnCount="2"
        android:rowCount="4"
        >

        <ImageButton
            android:id="@+id/hImageButtonOnclick1"
            android:layout_width="170dp"
            android:layout_height="80dp"
            android:layout_column="0"
            android:layout_marginLeft="18dp"
            android:layout_marginRight="10dp"
            android:layout_row="0"
            android:src="@drawable/h_imagebutton_select1"/>

        <TextView
            android:id="@+id/htextView1Center1"
            android:layout_width="180dp"
            android:layout_height="wrap_content"
            android:layout_column="0"
            android:layout_row="1"
            android:gravity="center"
            android:text="糖醋排骨"/>

        <ImageButton
            android:id="@+id/hImageButtonOnclick2"
            android:layout_width="170dp"
            android:layout_height="80dp"
            android:layout_column="1"
            android:layout_row="0"
            android:src="@drawable/h_imagebutton_select2"/>

        <TextView
            android:id="@+id/htextView1Center2"
            android:layout_width="160dp"
            android:layout_height="wrap_content"
            android:layout_column="1"
            android:layout_row="1"
            android:gravity="center"
            android:text="豆瓣鲫鱼"/>

        <ImageButton
            android:id="@+id/hImageButtonOnclick3"
            android:layout_width="170dp"
            android:layout_height="80dp"
            android:layout_column="0"
            android:layout_marginLeft="18dp"
            android:layout_marginRight="10dp"
            android:layout_row="2"
            android:src="@drawable/h_imagebutton_select3"/>

        <TextView
            android:id="@+id/htextView1Center3"
            android:layout_width="180dp"
            android:layout_height="wrap_content"
            android:layout_column="0"
            android:layout_row="3"
            android:gravity="center"
            android:text="干煸芸豆"/>

        <ImageButton
            android:id="@+id/hImageButtonOnclick4"
            android:layout_width="170dp"
            android:layout_height="80dp"
            android:layout_column="1"
            android:layout_row="2"
            android:src="@drawable/h_imagebutton_select4"/>

        <TextView
            android:id="@+id/htextView1Center4"
            android:layout_width="160dp"
            android:layout_height="wrap_content"
            android:layout_column="1"
            android:layout_row="3"
            android:gravity="center"
            android:text="寿司马铃薯"/>
    </GridLayout>

    <ImageView
        android:id="@+id/hImageViewOnclick2"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:src="@drawable/himageviewtitle2"/>

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:columnCount="2"
        android:rowCount="4"
        >

        <ImageButton
            android:id="@+id/hImageButtonOnclick5"
            android:layout_width="170dp"
            android:layout_height="60dp"
            android:layout_column="0"
            android:layout_marginLeft="18dp"
            android:layout_marginRight="10dp"
            android:layout_row="0"
            android:src="@drawable/h_imagebutton_select5"/>

        <TextView
            android:id="@+id/htextView1Center5"
            android:layout_width="180dp"
            android:layout_height="wrap_content"
            android:layout_column="0"
            android:layout_row="1"
            android:gravity="center"
            android:text="早餐"/>

        <ImageButton
            android:id="@+id/hImageButtonOnclick6"
            android:layout_width="170dp"
            android:layout_height="60dp"
            android:layout_column="1"
            android:layout_row="0"
            android:src="@drawable/h_imagebutton_select6"/>

        <TextView
            android:id="@+id/htextView1Center6"
            android:layout_width="160dp"
            android:layout_height="wrap_content"
            android:layout_column="1"
            android:layout_row="1"
            android:gravity="center"
            android:text="午餐"/>

        <ImageButton
            android:id="@+id/hImageButtonOnclick7"
            android:layout_width="170dp"
            android:layout_height="60dp"
            android:layout_column="0"
            android:layout_marginLeft="18dp"
            android:layout_marginRight="10dp"
            android:layout_row="2"
            android:src="@drawable/h_imagebutton_select7"/>

        <TextView
            android:id="@+id/htextView1Center7"
            android:layout_width="180dp"
            android:layout_height="wrap_content"
            android:layout_column="0"
            android:layout_row="3"
            android:gravity="center"
            android:text="晚餐"/>

        <ImageButton
            android:id="@+id/hImageButtonOnclick8"
            android:layout_width="170dp"
            android:layout_height="60dp"
            android:layout_column="1"
            android:layout_row="2"
            android:src="@drawable/h_imagebutton_select8"/>

        <TextView
            android:id="@+id/htextView1Center8"
            android:layout_width="160dp"
            android:layout_height="wrap_content"
            android:layout_column="1"
            android:layout_row="3"
            android:gravity="center"
            android:text="水果餐"/>
    </GridLayout>
</LinearLayout>
