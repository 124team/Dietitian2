<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#c2e2e0e0">
    <android.support.v7.widget.Toolbar
        android:id="@+id/s_login_toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#3F51B5"
        android:minHeight="?attr/actionBarSize" >
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/back"
            android:id="@+id/s_return_page"
            android:layout_gravity="center_vertical|start"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="个人信息"
            android:id="@+id/s_toolbar_title"
            android:textColor="@android:color/white"
            android:textSize="18sp"
            android:textStyle="bold" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_marginRight="10dp"
            android:text="完成"
            android:id="@+id/s_personal_save"
            android:textColor="@android:color/white"
            android:textSize="18sp"
            android:textStyle="bold" />
    </android.support.v7.widget.Toolbar>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="80dp"
        android:orientation="vertical">
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="1.4dp"
            android:background="@drawable/s_login_lineblack"/>
        <edu.neusoft.a124team.dietitian.wangRui.personalEdit.S_personalNickNameEdit
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:background="@drawable/drawable_withe"
            android:paddingLeft="100dp"
            android:textCursorDrawable="@drawable/s_color_cursor"
            android:id="@+id/s_personal_nickName"/>
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="1.4dp"
            android:background="@drawable/s_login_lineblack"/>
        <edu.neusoft.a124team.dietitian.wangRui.personalEdit.S_personalAgeEdit

            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:background="@drawable/drawable_withe"
            android:paddingLeft="100dp"
            android:textCursorDrawable="@drawable/s_color_cursor"
            android:id="@+id/s_personal_age"/>
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="1.4dp"
            android:background="@drawable/s_login_lineblack"/>
        <edu.neusoft.a124team.dietitian.wangRui.personalEdit.S_personalEmail
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:background="@drawable/drawable_withe"
            android:paddingLeft="100dp"
            android:textCursorDrawable="@drawable/s_color_cursor"
            android:id="@+id/s_personal_email"/>
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="1.4dp"
            android:background="@drawable/s_login_lineblack"/>

    </LinearLayout>
</LinearLayout>